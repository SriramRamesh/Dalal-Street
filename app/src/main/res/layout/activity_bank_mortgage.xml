<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sriram.dalalstreet.Bank_Mortgage_activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:text="Motgage"
        android:layout_marginTop="10dp"
        android:id="@+id/title_bank_mortgage"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bank_mortgage_button"
            android:text="Motgage"
            android:layout_gravity="center"
            android:onClick="Call_Mortgage_Activity"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:background="#33fe00" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bank_return_button"
            android:text="Return"
            android:layout_gravity="center"
            android:onClick="Call_Return_Activity"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:background="#fe0800" />

    </LinearLayout>
</LinearLayout>
