<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_content_play_dalal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@android:color/white"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Stock_Exchange_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:text="Stock Exchange"
        android:layout_marginTop="10dp"
        android:id="@+id/title_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/stock_name_stock_exchange"
        />
    <com.example.sriram.dalalstreet.TextViewWithImages
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/current_price_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/day_high_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/day_low_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/alltime_high_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/alltime_low_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/stock_in_exchange_stock_exchange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:id="@+id/stocks_in_market_stock_exchange"
        />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bid_button"
            android:layout_marginTop="20dp"
            android:text="Trade"
            android:onClick="Trade_On_Click"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="#33fe00" />







</LinearLayout>
