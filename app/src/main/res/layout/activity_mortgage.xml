<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pragyan.delta.sriram.dalalstreet.Mortgage_activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_gravity="top"
        android:textColor="#000000"
        android:text="Motgage"
        android:layout_marginTop="10dp"
        android:id="@+id/title_mortgage_act"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stocks "
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="0.07"
                android:textColor="#000000"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:id="@+id/no_of_stocks_mortgage_act"
                android:inputType="number"
                 />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mortgage_button_mortgage_act"
        android:text="Mortgage"
        android:layout_gravity="center"
        android:onClick="Call_Mortgage_api"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:background="#33fe00" />
</LinearLayout>
